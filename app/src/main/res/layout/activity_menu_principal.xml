<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MenuPrincipal"
    android:background="#add8e6"
    >

    <ImageView
        android:id="@+id/icNavegarFechamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navegar"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechamento"
        android:textSize="25sp"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/icNavegarPiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_instalacao_piso"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instalações e Piso"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="200dp"
        />

    <Button
        android:id="@+id/btn_relatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:padding="20dp"
        android:text="Gerar Relatorio"

        />


</LinearLayout>